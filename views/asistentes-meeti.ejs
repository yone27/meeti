<main class="contenedor asistentes">
    <h1><%= nombrePagina %></h1>
    <% if(asistentes.length) { %>
        <ul class="lista-asistentes">
            <% asistentes.forEach(asistente => { %>
                <li>
                    <div class="imagen">
                        <% if(asistente.imagen) { %>
                            <img src="/uploads/profiles/<%= asistente.imagen %>">
                        <%  } %>
                    </div>
                    <div class="texto">
                        <%= asistente.nombre %>
                    </div>
                </li>
            <%  }) %>
        </ul>
    <% }else{ %>
        <p class="no-asistentes">No hay asistentes</p>
    <% } %>
</main>