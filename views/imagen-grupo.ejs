<main class="contenedor contenedor-formularios">
    <h1><%= nombrePagina %></h1>
    <form method="POST"
        class="default-form"
        enctype="multipart/form-data">
        <div class="campo">
            <label>Imagen</label>
            <input type="file"
                name="imagen">
        </div>
        <% if(group.imagen){ %>
            <div class="campo">
                <label>Imagen actual</label>
                <img src="/uploads/groups/<%= group.imagen %>" width="200">
            </div>
        <% }else{ %>
            <p>No hay imagen</p>
        <% } %>
        <div class="campo enviar">
            <input type="submit"
                value="Guardar cambios"
                class="btn btn-rojo">
        </div>
    </form>
</main>