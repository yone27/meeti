<main class="contenedor contenedor-formularios no-padding">
    <h1><%- nombrePagina %></h1>

    <form class="default-form" action="/editar-password" method="POST">
        <div class="campo">
            <label>Password anterior</label>
            <input type="password" name="anterior" placeholder="Password actual">
        </div>
        <div class="campo">
            <label>Password Nuevo</label>
            <input type="password" name="nuevo" placeholder="Password Nuevo">
        </div>
        <div class="campo enviar">
            <input type="submit" class="btn btn-rosa" value="Cambiar password">
        </div>
    </form>
</main>